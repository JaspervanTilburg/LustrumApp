<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.virgiel.lustrumapp">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/icon_logo_4d"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/icon_logo_4d"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.TinderActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.TinderMatchActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.DatespelActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.BerichtenActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".InfoPages.GalaInfoActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".InfoPages.WispoInfoActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".InfoPages.LustrumWekenInfoActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".InfoPages.PiekWeekInfoActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.SoundboardActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.AboutActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.SnelheidActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.WispoProgrammaActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.LustrumWeekProgrammaActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.SelfieStreamActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>