<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.virgiel.lustrumapp">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_logo_4d"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.virgiel.lustrumapp.Activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.virgiel.lustrumapp.Activities.TinderActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.virgiel.lustrumapp.Activities.TinderMatchActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.virgiel.lustrumapp.Activities.DatespelActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.virgiel.lustrumapp.Activities.BerichtenActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.virgiel.lustrumapp.InfoPages.GalaInfoActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.virgiel.lustrumapp.InfoPages.WispoInfoActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.virgiel.lustrumapp.InfoPages.LustrumWekenInfoActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.virgiel.lustrumapp.InfoPages.PiekWeekInfoActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.virgiel.lustrumapp.Activities.SoundboardActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.virgiel.lustrumapp.Activities.AboutActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>