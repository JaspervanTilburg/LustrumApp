<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activiteitenBackground"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/lustrumPink">

    <View android:id="@+id/timeLine"
        android:background="#ffffff"
        android:layout_width = "fill_parent"
        android:layout_height="3dip"
        android:layout_centerVertical="true"/>

    <com.example.tudelftsid.lustrumapp.LustrumButton
        android:id="@+id/galaInfoButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/gala_logo_info"
        android:visibility="invisible"
        android:clickable="false"/>

    <com.example.tudelftsid.lustrumapp.LustrumButton
        android:id="@+id/galaTinderButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/gala_logo_tinder"
        android:visibility="invisible"
        android:clickable="false"/>

    <com.example.tudelftsid.lustrumapp.LustrumButton
        android:id="@+id/galaFotosButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/gala_logo_fotos"
        android:visibility="invisible"
        android:clickable="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.example.tudelftsid.lustrumapp.LustrumButton
            android:id="@+id/galaButton"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:onClick="onActiviteitClicked"
            android:background="@drawable/gala_logo" />

        <com.example.tudelftsid.lustrumapp.LustrumButton
            android:id="@+id/wispoButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:onClick="onActiviteitClicked"
            android:background="@drawable/wispo_logo" />

        <com.example.tudelftsid.lustrumapp.LustrumButton
            android:id="@+id/lustrumWeekButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:onClick="onActiviteitClicked"
            android:background="@drawable/lustrum_week_logo" />

        <com.example.tudelftsid.lustrumapp.LustrumButton
            android:id="@+id/piekWekenButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:onClick="onActiviteitClicked"
            android:background="@drawable/piek_weken_logo" />

    </LinearLayout>


    <!--<TextView-->
        <!--android:id="@+id/textView"-->
