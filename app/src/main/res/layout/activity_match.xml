<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/galaxy_background">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/match_text"
        android:id="@+id/matchLettersView" />

    <TextView
        android:id="@+id/bravoTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/matchLettersView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="BRAVO VOOR JOU!"
        android:textColor="@android:color/white"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/jeHebtTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bravoTxt"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:text="JE HEBT EEN NIEUWE MATCH MET!"
        android:textColor="@android:color/white"
        android:textSize="18dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/newMatchView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/jeHebtTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/pf_jasper"
        app:civ_border_width="5dp"
        app:civ_border_color="@color/lustrumPink"/>

    <TextView
        android:id="@+id/newMatchTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newMatchView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="MATCH_NAME"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/newMatchPhoneTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newMatchTxt"
        android:layout_centerHorizontal="true"
        android:text="MATCH_PHONE"
        android:textColor="@android:color/white" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:background="@drawable/gala_button"
        android:text="CONTACT TOEVOEGEN"
        android:textColor="@android:color/white"
        android:onClick="onAddContactClick"/>

</RelativeLayout>