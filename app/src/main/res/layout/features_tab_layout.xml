<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/galaxy_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/firstRow"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/lustrum_rectangle_1"
                android:onClick="onAboutClick"
                android:src="@mipmap/about"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/lustrum_rectangle_1"
                android:onClick="onSoundboardClick"
                android:src="@mipmap/soundboard"
                android:visibility="visible"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:onClick="onSelfieStreamClick"
                android:background="@drawable/lustrum_rectangle_piekweek"
                android:src="@mipmap/selfiestream"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/thirdRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/firstRow"
            android:layout_marginTop="10dp"
            android:weightSum="3"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/lustrum_rectangle_1"
                android:onClick="onBerichtenClick"
                android:src="@mipmap/berichten" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:onClick="onPiekWeekProgrammaClick"
                android:src="@mipmap/piekweek_programm"
                android:background="@drawable/lustrum_rectangle_piekweek"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/thirdRow"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/lustrum_rectangle_wispo"
                android:onClick="onWispoProgrammaClick"
                android:src="@mipmap/wispo_programm" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:background="@drawable/lustrum_rectangle_lustrumweek"
                android:onClick="onLustrumWeekProgrammaClick"
                android:src="@mipmap/lustrumweek_programm" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:onClick="onTinderClick"
                android:src="@mipmap/tinder"
                android:background="@drawable/lustrum_rectangle_gala"/>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
