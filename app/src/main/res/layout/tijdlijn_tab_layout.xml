<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activiteitenBackground"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/lustrumLightBlue">

    <com.virgiel.lustrumapp.Background.Background
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/timeline_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textColor="#FFFFFF"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

    <View android:id="@+id/timeLine"
        android:background="#ffffff"
        android:layout_width = "fill_parent"
        android:layout_height="3dip"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/galaInfoButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/info"
        android:padding="20dp"
        android:background="@drawable/lustrum_circle"
        android:elevation="20dp"
        android:visibility="invisible"
        android:clickable="true"
        android:onClick="onGalaInfoClick"/>

    <ImageView
        android:id="@+id/galaTinderButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/tinder"
        android:padding="20dp"
        android:background="@drawable/lustrum_circle_2"
        android:elevation="20dp"
        android:visibility="invisible"
        android:clickable="false"
        android:onClick="onTinderClick"/>

    <!-- Datespel disabled -->
    <!--<ImageView
        android:id="@+id/galaSpelButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/datespel"
        android:padding="20dp"
        android:background="@drawable/lustrum_circle"
        android:elevation="20dp"
        android:visibility="invisible"
        android:clickable="false"
        android:onClick="onDatespelClick"/> -->

    <ImageView
        android:id="@+id/wispoInfoButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/info"
        android:padding="20dp"
        android:background="@drawable/lustrum_circle_4"
        android:elevation="20dp"
        android:visibility="invisible"
        android:clickable="true"
        android:onClick="onWispoInfoClick"/>

    <ImageView
        android:id="@+id/wispoProgrammaButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/wispoprogramma"
        android:padding="20dp"
        android:background="@drawable/lustrum_circle_4"
        android:elevation="20dp"
        android:visibility="invisible"
        android:clickable="true"
        android:onClick="onWispoProgrammaClick"/>

    <!--TODO change this background and mipmap-->
    <!--<ImageView
        android:id="@+id/wispoSnelheidsmeterButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/info"
        android:padding="20dp"
        android:background="@drawable/lustrum_circle_4"
        android:elevation="20dp"
        android:visibility="invisible"
        android:clickable="true"
        android:onClick="onSnelheidClick"/>
        -->

    <ImageView
        android:id="@+id/selfieStreamButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/selfiestream"
        android:padding="20dp"
        android:background="@drawable/lustrum_circle_6"
        android:elevation="20dp"
        android:visibility="invisible"
        android:clickable="true"
        android:onClick="onSelfieStreamClick"/>

    <ImageView
        android:id="@+id/lustrumWeekInfoButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/info"
        android:padding="20dp"
        android:background="@drawable/lustrum_circle_5"
        android:elevation="20dp"
        android:visibility="invisible"
        android:clickable="true"
        android:onClick="onLustrumWekenInfoClick"/>

    <ImageView
        android:id="@+id/pintenVangenButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/pinten_vangen"
        android:padding="20dp"
        android:background="@drawable/lustrum_circle_6"
        android:elevation="20dp"
        android:visibility="invisible"
        android:clickable="true"
        android:onClick="onPintenVangenClick"/>

    <ImageView
        android:id="@+id/lustrumWeekProgrammaButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/lustrumweek_programm"
        android:padding="20dp"
        android:background="@drawable/lustrum_circle_5"
        android:elevation="20dp"
        android:visibility="invisible"
        android:clickable="true"
        android:onClick="onLustrumWeekProgrammaClick"/>

    <ImageView
        android:id="@+id/piekWekenInfoButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/info"
        android:padding="20dp"
        android:background="@drawable/lustrum_circle_6"
        android:elevation="20dp"
        android:visibility="invisible"
        android:clickable="true"
        android:onClick="onPiekWeekInfoClick"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/galaButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/gala_logo"
            android:elevation="30dp" />

        <ImageView
            android:id="@+id/wispoButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:elevation="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/wispo_logo" />

        <ImageView
            android:id="@+id/lustrumWeekButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:elevation="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/lustrum_week_logo" />

        <ImageView
            android:id="@+id/piekWekenButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:elevation="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:onClick="onPiekWekenButtonClicked"
            android:src="@drawable/piek_weken_logo" />

        <ImageView
            android:id="@+id/piekWeekProgrammaButton"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/piekweek_programm"
            android:padding="20dp"
            android:background="@drawable/lustrum_circle_6"
            android:elevation="20dp"
            android:visibility="invisible"
            android:clickable="true"
            android:onClick="onPiekWeekProgrammaClick"/>

    </LinearLayout>

</RelativeLayout>