<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/lustrumGrey"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/galaBackground"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/confetti_circle"
                android:scaleType="centerCrop" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/myProfileImageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="42dp"
                android:layout_marginLeft="37dp"
                android:src="@drawable/pf_jasper" />

        </RelativeLayout>

        <TextView
            android:id="@+id/myNameTxt"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:text="NAME"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/myClubTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/lustrumPink"
            android:textSize="18dp"
            android:text="JAAR_CLUB"
            android:textStyle="normal"
            android:drawableLeft="@mipmap/club"
            android:drawablePadding="10dp"/>
        <TextView
            android:id="@+id/myBolletjesTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lustrumPink"
            android:layout_margin="5dp"
            android:textSize="18dp"
            android:textStyle="normal"
            android:text="BOLLETJES"
            android:drawableLeft="@mipmap/bolletjes"
            android:drawablePadding="10dp"/>
        <TextView
            android:id="@+id/myHuisTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lustrumPink"
            android:layout_margin="5dp"
            android:textSize="18dp"
            android:textStyle="normal"
            android:text="HUIS"
            android:drawableLeft="@mipmap/huis"
            android:drawablePadding="10dp"/>

        <TextView
            android:id="@+id/instellingenTitel"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:text="INSTELLINGEN"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/ikBenTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="IK BEN"
            android:textColor="@android:color/darker_gray"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:padding="5dp">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/manButton"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:checked="true"
                    android:text="MAN"
                    android:textColor="@android:color/white"
                    android:textAlignment="center"
                    android:button="@android:color/transparent"
                    android:background="@drawable/gender_selector"/>

                <RadioButton
                    android:id="@+id/womanButton"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:text="VROUW"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:button="@android:color/transparent"
                    android:background="@drawable/gender_selector"/>
            </RadioGroup>

        </LinearLayout>

        <TextView
            android:id="@+id/ikWilZienTitel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="IK WIL ZIEN"
            android:textColor="@android:color/darker_gray"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="5dp">

            <CheckBox
                android:id="@+id/mannenCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MANNEN"
                android:onClick="onMannenCheckBoxClick"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black"/>

            <CheckBox
                android:id="@+id/vrouwenCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VROUWEN"
                android:onClick="onVrouwenCheckBoxClick"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/alleenTokoTitel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ALLEEN TOKO JAREN"
                android:textColor="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/jarenBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_weight="1"
                android:text="2017-2014"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

    </LinearLayout>
</ScrollView>